#:import win kivy.core.window

<Rings>:
    # ####################
    # # https://blog.kivy.org/2014/01/positionsize-of-widgets-in-kivy/
    # #########################
    radius: root.radius
    height: root.height
    canvas:

        Color:
            rgb: 0.502, 0.2588, 0.9569
        Line:
            width: 3
            circle: (self.pos[0]+ self.radius), (self.pos[1]+ self.radius), self.radius
