#:import win kivy.core.window.Window
#:import clock kivy.clock.Clock


<Circles>:
    id: circles
    radius: 150
    size: 300, 300
    color: root.color
    # target: root.target
    canvas:
        Color:
            rgb: self.color
            # 0.502, 0.2588, 0.9569
        Ellipse:
            pos:  self.pos[0], self.pos[1]  #
            size:  self.radius*2, self.radius*2

<Menu>:
    Circles:
        id: top_left
        pos: -self.radius, win.height-self.radius
        color: 0.502, 0.2588, 0.9569
        on_press: self.color = [0.402, 0.1588, 0.8569]
        on_release: app.manager.current = 'camScreen'; print("changing to camScreen"); self.color=[0.502, 0.2588, 0.9569]
    Circles:
        id: top_right
        color: 0.2588, 0.3725, 0.9569
        pos:  win.width-self.radius, win.height-self.radius
        on_press: self.color = [0.1588, 0.2725, 0.8569]
        on_release: app.manager.current = 'preprocScreen'; self.color=[ 0.2588, 0.3725, 0.9569]; print("changing to preprocScreen")
    Circles:
        id: bottom_right
        color: 0.2392, 1., 1.
        pos: win.width-self.radius, -self.radius
        on_press: self.color=[0.1392, .9, .9]
        on_release: app.manager.current = 'edgeScreen'; self.color=[0.2392, 1., 1.];print("changing to edgeScreen")

<CamScreen>:
    # name: 'camScreen
    cam: cam
    KivyCamera:
        id: cam
    Menu:
        id: menu
<PreprocScreen>:
    preproc: preproc
    # name: 'preprocScreen'
    Preproc_Anim:
        id: preproc
    Menu
<EdgedetScreen>:
    edgedet: edgedet
    # name: 'edgedetScreen'
    EdgeDetect:
        id: edgedet
    Menu
<HogScreen>:
    hog: hog
    Hog_Detect:
        id: hog
